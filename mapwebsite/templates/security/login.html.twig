{% extends 'base.html.twig' %}
{% set nav_off = true %}

{% block title %}Login{% endblock %}

{% block body %}
<style>
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error {color: red}
</style>

    <div class="text-center">
        <img src="../images/TUDublinLogo.png" width="350" height="250" class="text-center" alt="logo">
        <form class="form-group" method="POST" action="{{ path('login') }}">
            <h1>Login</h1>
            <input type="hidden" name="action" value="processLogin">

            <div class="form-group">
                <input type="text" class="col.col-sm-" required="required" value="{{ last_username }}" name="_username" placeholder="Student ID">
            </div>

            <div class="form-group">
                <input type="password" class="col.col-sm-" required="required" name="_password" placeholder="Password">
            </div>
            <a href="{{ path('signup') }}">No account? Register here!</a>
            <br><br>
            <a href="/">Login as guest?</a>
            <br><br>
            <input type="submit" value="Login" name="login-submit" class="btn btn-dark">
            <br><br>
            {% if error %}
                <span class="error">{{ error.messageKey }}</span>
            {% endif %}
        </form>
    </div>
{% endblock %}

